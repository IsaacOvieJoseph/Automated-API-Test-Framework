  "item": [
    {
      "name": "Valid Email Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"to\": \"test@domain.com\",\n  \"subject\": \"Welcome!\",\n  \"body\": \"Thanks for signing up.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/send-email",
          "host": ["{{baseUrl}}"],
          "path": ["send-email"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Valid request should return status code 202\", function () {",
              "    pm.response.to.have.status(202);",
              "});"
            ]
          }
        }
      ]
    },
